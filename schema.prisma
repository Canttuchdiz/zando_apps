// database
datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

// data models
model Application {
  id String @id @default(uuid())
  roleid BigInt
  userid BigInt
  application String
  reapply Boolean @default(false)
  guildId BigInt
  questions Question[]

  @@unique([application, guildId])
}

model Question {
  id Int @id @default(autoincrement())
  question String
  application Application @relation(fields: [applicationId], references: [id])
  applicationId String
}

model Records {
   id Int @id @default(autoincrement())
   userId BigInt
   application String
   guildId BigInt
   blacklist Boolean @default(false)
}

model Config {
   userId BigInt
   guildId BigInt @unique
}